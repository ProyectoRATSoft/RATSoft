{% extends 'FrontendBundle::Default/base.html.twig' %}
{% block body %}
<style>
   .id{
    display: none;
   }
   @media  (max-width: 770px) {
    .dataTables_filter label{
   display: inline-flex;
   text-align: center !important;
  }   

    div.col-md-5.col-sm-12.col-xs-12.text-right {
          text-align: center !important;
    }  
 }
</style>
  <!-- ACA EMPIEZO A TRABAJAR LA INTERFAZ Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
       <h2>
        Rubros e Imputaciones
        <small>Buscador</small>
      </h2>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
        <li class="active"><i class="fa fa-search" aria-hidden="true"></i> Buscador de Rubros e Imputaciones</li>
      </ol>
    </section>
    <!-- Main content -->

    <section class="content">
      <!-- Small boxes (Stat box) -->
      <div class="row" style="padding-bottom: 0.5em;">
          <div class="col-md-12">
            <div class="form-group">
                          {% block botones %}
                          {% endblock %}
            </div>
          </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Busque la imputacion deseada..</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="tabla-imputaciones" class="table table-bordered table-striped table-hover dt-responsive">
                <thead>
                  <tr>
                    <th class="id">id</th>
                    <th>Nombre</th>
                    <th>Codigo</th>
                  </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                  <tr>
                    <th class="id">id</th>
                    <th>Nombre</th>
                    <th>Codigo</th>
                  </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <div class="box">
              <div class="box-header">
                <h3 class="box-title">Busque el rubro deseado..</h3>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <table id="tabla-rubros" class="table table-bordered table-striped table-hover dt-responsive">
                  <thead>
                    <tr>
                      <th class="id">id</th>
                      <th>Nombre</th>
                      <th>Servicio</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                  <tfoot>
                    <tr>
                      <th class="id">id</th>
                      <th>Nombre</th>
                      <th>Servicio</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <!-- MODAL ADD EMPRESA -->
  <div class="modal fade" id="modalAddRubros" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <form id="modal-formulario2">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Nuevo Rubro</h4>
        </div>
        <div class="modal-body">
          <h4>Datos del Rubro</h4>
          <div class="form-group">
            <input id="nuevoIDRubro" style="display: none" enable="true"/>
          </div>
          <div class="form-group">
            <label for="nuevoNombreRubro">Nombre: </label>
            <input type="text" required="true" class="form-control input-sm" name="nuevoNombreRubro" id="nuevoNombreRubro" required="true" placeholder="Nombre"/>
          </div>
          <div class="form-group">
            <label for="nuevoServicio">Servicio: </label>
              <select name="nuevoServicio" id="nuevoServicio" required="true" class="selectpicker dropdown-toggle form-control input-sm" type="button" data-toggle="dropdown">
                <option disabled selected value>--Seleccione una opcion--</option>
                <option value="0"> NO </option>
                <option value="1"> SI </option>  
              </select>                
          </div>
        </div>
        <div class="modal-footer">
          <div class="col-xs-6 " id="colDelete">
            <button type="submit" onclick="return false" class="btn btn-danger pull-left" id="deleteRubro" style="display: none">Borrar</button>
          </div>
          <div class="col-xs-6 ">
            <button type="submit" onclick="return false" class="btn btn-success" id="editRubro" style="display: none">Guardar</button>
            <button type="submit" onclick="return false" class="btn btn-success" id="newRubro" style="display: none" >Guardar</button>
            <button type="submit" onclick="return false" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
      </form>
    </div>
  </div>
  <!-- /MODAL ADD EMPRESA -->
   <!-- MODAL ADD EMPRESA -->
  <div class="modal fade" id="modalAddImputaciones" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <form id="modal-formulario">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Nueva Imputacion</h4>
        </div>
        <div class="modal-body">
          <h4>Datos de la Imputacion</h4>
          <div class="form-group">
            <input id="nuevoIDImputacion" style="display: none" enable="true"/>
          </div>
          <div class="form-group">
            <label for="nuevaNombreImputacion">Nombre: </label>
            <input type="text" required="true" class="form-control input-sm" name="nuevaNombreImputacion" id="nuevaNombreImputacion" required="true" placeholder="Nombre"/>
          </div>
          <div class="form-group">
            <label for="nuevoCodigo">Codigo: </label>
            <input type="text" required="true" class="form-control input-sm" id="nuevoCodigo" name="nuevoCodigo" placeholder="Codigo"/>
          </div>
        </div>
        <div class="modal-footer">
          <div class="col-xs-6 " id="colDelete">
            <button type="submit" onclick="return false" class="btn btn-danger pull-left" id="deleteImputacion" style="display: none">Borrar</button>
          </div>
          <div class="col-xs-6 ">
            <button type="submit" onclick="return false" class="btn btn-success" id="editImputacion" style="display: none">Guardar</button>
            <button type="submit" onclick="return false" class="btn btn-success" id="newImputacion" style="display: none" >Guardar</button>
            <button type="submit" onclick="return false" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
      </form>
    </div>
  </div>
  <!-- /MODAL ADD EMPRESA -->
{% endblock %}
