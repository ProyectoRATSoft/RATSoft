{% extends 'FrontendBundle::Default/base.html.twig' %}
{% block body %}
<style>
   .id{
    display: none;
   }
</style>
  <!-- ACA EMPIEZO A TRABAJAR LA INTERFAZ Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
       <h2>
        Comprobantes
        <small>Buscador</small>
      </h2>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
        <li class="active"><i class="fa fa-search" aria-hidden="true"></i> Buscador de Comprobantes</li>
      </ol>
    </section>
    <!-- Main content -->

    <section class="content">
      <!-- Small boxes (Stat box) -->
      <div class="row" style="padding-bottom: 0.5em;">
          <div class="col-xs-6">
            <div class="form-group">
                          {% block botones %}
                          {% endblock %}
            </div>
          </div>
          <div class="col-xs-6">
            
          </div>
      </div>
      <div class="row">
        <div class="col-xs-6">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Busque el Comprobante deseada..</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="tabla-comprobante" class="table table-bordered table-striped table-hover dt-responsive">
                <thead>
                  <tr>
                    <th class="id">id</th>
                    <th>Comprobante</th>
                    <th>Tipo de Comprobante</th>
                  </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                  <tr>
                    <th class="id">id</th>
                    <th>Comprobante</th>
                    <th>Tipo de Comprobante</th>
                  </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
        </div>
        <div class="col-xs-6">
           <div class="panel-group" id="accordion">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                   Configuraciones del comprobante
                  </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                  <div class="box-body">
                    <h4 class="panel-title">
                     Bloqueos de campos
                    </h4>
                    <br>
                    <div class="col-md-12">
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_exe" name="blk_exe" disabled="disabled"> Exento
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_perciva" name="blk_perciva" disabled="disabled">Percepcion IVA
                        </label>
                      </div>
                      <div class="col-xs-4">
                         <label class="checkbox-inline">
                            <input type="checkbox" value="" id="blk_perciibb" name="blk_perciibb" disabled="disabled">Percepcion IIBB
                          </label>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_ret" name="blk_ret" disabled="disabled">Retencion
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_netos" name="blk_netos" disabled="disabled">Netos
                        </label>
                      </div>
                      <div class="col-xs-4">
                         <label class="checkbox-inline">
                            <input type="checkbox" value="" id="blk_iva" name="blk_iva" disabled="disabled">IVA
                          </label>
                      </div>
                    </div>
                    
                    <div class="col-md-12">
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_nograv" name="blk_nograv" disabled="disabled">No gravado
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_total" name="blk_total" disabled="disabled">Total
                        </label>
                      </div>
                      <div class="col-xs-4">
                      </div>
                    </div>
                    <div style="margin: 95px"></div>
                    <h4 class="panel-title">
                     Autocompletado de campos
                    </h4>
                    <br>
                    <div class="col-md-12">
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="autoiva" name="autoiva" disabled="disabled">IVA
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="autoneto" name="autoneto" disabled="disabled">Neto
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="autototal" disabled="disabled" name="autototal">Total
                        </label>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <!-- MODAL ADD EMPRESA -->
  <div class="modal fade" id="modalAddComprobante" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <form id="modal-formulario">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Nuevo Comprobante</h4>
        </div>
        <div class="modal-body">
          <h4>Datos del comprobante</h4>
          <div class="form-group">
            <input id="nuevoId" style="display: none" enable="true"/>
          </div>
          <div class="form-group"> 
           <div class="col-xs-12">
              <label for="comprobanteDetalleModal">Detalle del comprobante: </label>
            </div>
            <div class="col-xs-12">
              <div class="col-xs-4">
                <select name="comprobanteDetalle" id="comprobanteDetalle" required="true" class="selectpicker dropdown-toggle form-control input-sm" type="button" data-toggle="dropdown">
                        <option disabled selected value>--Seleccione una opcion--</option>  
                      </select>
              </div>
              <div class="col-xs-4">
                 <label class="checkbox-inline">
                  <input type="checkbox" value="" id="chkComprobanteDetalle" name="chkComprobanteDetalle"> Seleccione para escribir el detalle de comprobante nuevo.
                </label>
              </div>
              <div class="col-xs-4">
                
                <input type="text" required="true" class="form-control input-sm" name="comprobanteDetalleModal" id="comprobanteDetalleModal" required="true" placeholder="Detalle del Comprobante" disabled="disabled"/>
              </div>
            </div>
          </div>
          <div style="margin: 95px"></div>
          <div class="form-group">
            <div class="col-xs-12">
              <label for="codigoDetalleModal">Codigo del comprobante: </label>
            </div>
            <div class="col-xs-12">
              <div class="col-xs-4">
                <select name="codigoComprobante" id="codigoComprobante" required="true" class="selectpicker dropdown-toggle form-control input-sm" type="button" data-toggle="dropdown">
                        <option disabled selected value>--Seleccione una opcion--</option>  
                </select>
              </div> 
              <div class="col-xs-4">
                <label class="checkbox-inline">
                  <input type="checkbox" value="" id="chkCodigoComprobanteModal" name="chkCodigoComprobanteModal"> Seleccione para escribir un codigo de comprobante nuevo.
                </label>
              </div>
              <div class="col-xs-4">
                <input type="number" required="true" class="form-control input-sm" id="codigoDetalleModal" name="codigoDetalleModal" placeholder="Codigo del Comprobante" disabled="disabled"/>
              </div>        
            </div>
          </div>
          <div class="form-group"> 
           <div class="col-xs-12">
              <label for="TipocomprobanteDetalleModal">Tipo de comprobante: </label>
            </div>
            <div class="col-xs-12">
              <div class="col-xs-4">
                <select name="tipoComprobante" id="tipoComprobante" required="true" class="selectpicker dropdown-toggle form-control input-sm" type="button" data-toggle="dropdown">
                        <option disabled selected value>--Seleccione una opcion--</option>  
                      </select>
              </div>
              <div class="col-xs-4">
                 <label class="checkbox-inline">
                  <input type="checkbox" value="" id="chkTipoComprobanteModal" name="chkTipoComprobanteModal"> Seleccione para escribir un tipo de comprobante nuevo.
                </label>
              </div>
              <div class="col-xs-4">
                <input type="text" required="true" class="form-control input-sm" name="TipocomprobanteDetalleModal" id="TipocomprobanteDetalleModal" required="true" placeholder="Tipo de Comprobante" disabled="disabled" />
              </div>
            </div>
          </div>
          <div style="margin: 95px"></div>
          <div class="form-group">            
            <div class="box-body">
              <h4 class="panel-title">
                     Bloqueos de campos
                    </h4>
                    <div class="col-md-12">
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_exe" name="blk_exe"> Exento
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_perciva" name="blk_perciva">Percepcion IVA
                        </label>
                      </div>
                      <div class="col-xs-4">
                         <label class="checkbox-inline">
                            <input type="checkbox" value="" id="blk_perciibb" name="blk_perciibb">Percepcion IIBB
                          </label>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_ret" name="blk_ret">Retencion
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_netos" name="blk_netos">Netos
                        </label>
                      </div>
                      <div class="col-xs-4">
                         <label class="checkbox-inline">
                            <input type="checkbox" value="" id="blk_iva" name="blk_iva">IVA
                          </label>
                      </div>
                    </div>
                    
                    <div class="col-md-12">
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_nograv" name="blk_nograv">No gravado
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="blk_total" name="blk_total">Total
                        </label>
                      </div>
                      <div class="col-xs-4">
                      </div>
                    </div>
                    <div style="margin: 75px"></div>
                    <h4 class="panel-title">
                     Autocompletado de campos
                    </h4>
                    <br>
                    <div class="col-md-12">
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="autoiva" name="autoiva">IVA
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="autoneto" name="autoneto" >Neto
                        </label>
                      </div>
                      <div class="col-xs-4">
                        <label class="checkbox-inline">
                          <input type="checkbox" value="" id="autototal" name="autototal">Total
                        </label>
                      </div>
                    </div>
                  </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="col-xs-6 " id="colDelete">
            <button type="submit" onclick="return false" class="btn btn-danger pull-left" id="deleteComprobante" style="display: none">Borrar</button>
          </div>
          <div class="col-xs-6 ">
            <button type="submit" onclick="return false" class="btn btn-success" id="editComprobante" style="display: none">Guardar</button>
            <button type="submit" onclick="return false" class="btn btn-success" id="newComprobante" style="display: none" >Guardar</button>
            <button type="submit" onclick="return false" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
      </form>
    </div>
  </div>
  <!-- /MODAL ADD EMPRESA -->
{% endblock %}
